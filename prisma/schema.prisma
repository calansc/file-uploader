generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.MediumText  // MediumText may be needed for MySql
  expiresAt   DateTime
}
// Prisma Session Store Docs - https://github.com/kleydon/prisma-session-store#readme

model User {
  id       Int       @id @default(autoincrement())  
  email    String    @unique
  name     String?   
  folders  Folder[]
  files    File[]
}
  
model Folder {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  user    User    @relation(field: [userId], references: [id])
  userId  Int     @unique
}

model File {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  folder    Folder  @relation(field: [folderId], references: [id])
  folderId  Int     @unique  
}